body {
	background-color: #1CA39D;
	font-family: Arial;
	margin-left: auto;
	margin-right: auto;
	max-width: 1440px;
	min-width: 256px;
	padding-top: 8px;
	padding-bottom: 24px;
	padding-left: 24px;
	padding-right: 24px;
}

p.title {
	border: 8px solid #00AFEB;
	border-radius: 20px;
	padding: 12px;
	color: #FFFFFF;
	background-color: #336E7F;
	font-size: 28px;
	font-family: Tahoma;
	font-weight: bold;
	text-shadow: Black 3px 3px;
}

p.title::before {
	color: White;
	font-family: Tahoma;
	font-weight: bold;
	content: "Network88";
}

p.subtitle {
	font-size: 24px;
	text-shadow: White 1px 1px;
}

p.text {
	font-size: 20px;
}

h3.header {
	text-shadow: White 1px 1px;
}

nav ul {
	list-style-type: none;
	background-color: #336E7F;
	border: 8px solid #00AFEB;
	border-radius: 20px;
	font-family: Tahoma;
	font-size: 24px;
	font-weight: bold;
	text-shadow: Black 2px 2px; 
	padding: 16px;
}

nav ul li {
	display: inline;
	border-right: 2px solid #111111;
	padding-right: 8px;
	padding-left: 8px;
}

nav ul li:last-child {
	border-right: none;
} 

nav ul li, nav ul li a {
	text-decoration: none;
	color: #FFFFFF;
}

nav li.selected {
	color: #000000;
	text-shadow: White 1px 1px;
}

nav ul li a:hover {
	text-decoration: underline;
	color: Black;
	text-shadow: White 1px 1px;
}

div ul li, div ul li a {
	text-decoration: none;
	text-shadow: 1px 1px;
	color: #111111;
	font-size: 22px;
}

div li.selected {
	color: #FFFFFF;
	text-shadow: Black 1px 1px;
}

div ul li a:hover {
	text-decoration: underline;
	color: White;
	text-shadow: Black 1px 1px;
}
list ul {
	font-size: 20px;
}

form {
	font-size: 22px;
}

form input {
	font-size: 20px;
	color: Black;
	background-color: #75F0F7;
}

input.submit {
	font-size: 20px;
	color: White;
	background-color: #336E7F;
}
