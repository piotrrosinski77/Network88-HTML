body {
	background-color: #1CA39D;
	font-family: Arial;
	margin-left: auto;
	margin-right: auto;
	max-width: 1440px;
	min-width: 256px;
	padding-top: 8px;
	padding-bottom: 24px;
	padding-left: 24px;
	padding-right: 24px;
}

p.title {
	border: 8px solid #00AFEB;
	border-radius: 20px;
	padding: 12px;
	color: #FFFFFF;
	background-color: #336E7F;
	font-size: 28px;
	font-family: Tahoma;
	font-weight: bold;
	text-shadow: Black 0.1em 0.1em 0.2em;
}

sup {
	font-size: 36px;
}

p.subtitle {
	font-size: 20px;
	text-shadow: White 0.1em 0.1em 0.2em;
}

p.text {
	font-size: 20px;
}

h3.header {
	font-size: 22px;
	text-shadow: White 0.1em 0.1em 0.2em;
}

nav ul {
	list-style-type: none;
	background-color: #336E7F;
	border: 8px solid #00AFEB;
	border-radius: 20px;
	font-family: Tahoma;
	font-size: 24px;
	font-weight: bold;
	text-shadow: Black 0.1em 0.1em 0.2em; 
	padding: 16px;
}

nav ul li {
	display: inline;
	border-right: 2px solid #111111;
	padding-right: 8px;
	padding-left: 8px;
}

nav ul li:last-child {
	border-right: none;
} 

nav ul li, nav ul li a {
	text-decoration: none;
	color: #FFFFFF;
}

nav ul li.selected {
	color: #000000;
	text-shadow: White 0.1em 0.1em 0.2em;
	text-decoration: none;
}

nav ul li a:hover {
	text-decoration: underline;
}

nav ul li a:active {
	text-decoration: underline;
	color: Black;
	text-shadow: White 0.1em 0.1em 0.2em;
}

article ul li a {
	text-decoration: none;
	text-shadow: White 0.1em 0.1em 0.2em;
	color: #111111;
	font-size: 22px;
}

article li.selected {
	color: #FFFFFF;
	text-shadow: Black 0.1em 0.1em 0.2em;
}

article ul li a:hover {
	text-decoration: underline;
}

article ul li a:active {
	text-decoration: underline;
	color: White;
	text-shadow: Black 0.1em 0.1em 0.2em;
}

list ul {
	font-size: 20px;
}

form {
	font-size: 22px;
}

form input {
	font-size: 20px;
	color: Black;
	background-color: #75F0F7;
}

input.submit {
	font-size: 20px;
	color: White;
	background-color: #336E7F;
}

table {
	width: 75%;
	border: 2px solid #FFFFFF;
	border-collapse: collapse;
}

th, td {
	padding: 12px;
	text-align: left;
	border: 2px solid #000000;
}

th {
	font-size: 24px;
	text-shadow: #FFFFFF 0.1em 0.1em 0.2em;
	background-color: #75F0F7;
}

td {
	font-size: 20px;
	background-color: #336E7F;
}

td.changes {
	font-size: 18px;
}

p.contact a {
	text-decoration: none;
	color: #000000;
}

p.contact a:hover{
	text-decoration: underline;
}

p.contact a:active {
	text-decoration: underline;
	color: white;
}

p.mail a {
	font-size: 24px;
	text-decoration: none;
	color: #FFFFFF;
	border: dotted 2px #000000;
	padding: 8px;
}

p.mail {
	font-size: 42px;
	font-weight: bold;
}

footer p.contact {
	text-align: right;
}

footer p.copyright {
	float: left;
}

a.link	{
	font-size: 18px;
	color: #FFFFFF
}

a.link:active {
	color: #000000;
	text-decoration: underline;
}

p.name {
	font-size: 18px;
	color: #FFFFFF;
}

img.wifi_icon {
	border-radius: 16px;
}