body {
	background-color: Cyan;
	border: 4px solid white;
	font-family: Consolas;
	margin-left: auto;
	margin-right: auto;
	max-width: 1024px;
	min-width: 256px;
	padding-top: 8px;
	padding-bottom: 24px;
	padding-left: 24px;
	padding-right: 24px;
}
html {
	background: radial-gradient(circle, Grey, Grey, White, Black);
	background-size: 8px 8px;
}

h1 {
	color: Red;
	font-size: 32px;
	font-family: Tahoma;
}

nav ul {
	list-style-type: none;
	background-color: Gray;
	border: 3px solid #111111;
	border-radius: 12px;
	font-family: Tahoma;
	font-size: 18px;
	font-weight: bold;
	padding: 16px;
	
}

nav ul li {
	border-right: 2px dotted #111111;
	padding-right: 8px;
	padding-left: 8px;
}

nav ul li:last-child {
	border-right: none;
}

nav ul li a {
	text-decoration: none;
	color: #111111;
}