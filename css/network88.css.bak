@import url("https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,700,1,200");
@import url('https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400&family=VT323&display=swap');


body {
	background-color: #1CA39D;
	font-family: 'Roboto Mono', monospace;
	margin-left: auto;
	margin-right: auto;
	max-width: 1440px;
	min-width: 256px;
	padding-top: 8px;
	padding-bottom: 24px;
	padding-left: 24px;
	padding-right: 24px;
}

header div {
	font-family: 'VT323', monospace;
	font-size: 32px;
	text-align: center;
	color: #FFFFFF;
	text-shadow: Black 0.1em 0.1em 0.4em;
}

p.title {
	border: 4px dashed #00AFEB;
	border-radius: 20px;
	padding: 16px;
	color: #FFFFFF;
	background-color: #336E7F;
	font-family: 'Roboto Mono', monospace;
	font-size: 32px;
	font-weight: bold;
	text-shadow: White 0.1em 0.1em 0.5em;
	letter-spacing: 4px;
}

sup {
	font-size: 44px;
}

h3.header {
	font-size: 24px;
	text-shadow: White 0.1em 0.1em 0.5em;
}

img.wifi_icon {
	border-radius: 40px 120px;
	margin-left: 1em;
	margin-right: 1em;
}

p.subtitle {
	font-size: 24px;
	text-shadow: White 0.1em 0.1em 0.3em;
}

p.text {
	font-size: 20px;
}

span.hint {
	font-size: 18px;
	color: #000000;
	text-shadow: none;
	opacity: 0.6;
}

span.firstHint {
	font-size: 18px;
	color: #FFFFFF;
	text-shadow: none;
	opacity: 0.6;
}

iframe {
	margin-left: auto;
	margin-right: auto;
}

nav ul {
	list-style-type: none;
	background-color: #336E7F;
	border: 4px dashed #00AFEB;
	border-radius: 22px;
	font-size: 30px;
	font-weight: bold;
	text-shadow: Black 0.1em 0.1em 0.3em; 
	padding: 12px;
}

nav ul li {
	display: inline;
	border-right: 2px solid #111111;
	padding-right: 8px;
	padding-left: 8px;
}

nav ul li.selected {
	color: #000000;
	text-shadow: White 0.1em 0.1em 0.2em;
	text-decoration: none;
}

nav ul li:last-child {
	border-right: none;
} 

nav ul li, nav ul li a {
	text-decoration: none;
	color: #FFFFFF;
}

nav ul li a:hover {
	text-decoration: underline;
}

nav ul li a:active {
	text-decoration: underline;
	color: Black;
	text-shadow: White 0.1em 0.1em 0.2em;
}

article section ul li a {
	text-decoration: none;
	text-shadow: White 0.1em 0.1em 0.2em;
	color: #111111;
	font-size: 24px;
	letter-spacing: 1px;
}

article li.selected {
	color: #FFFFFF;
	text-shadow: Black 0.1em 0.1em 0.2em;
	font-size: 24px;
	letter-spacing: 1px;
}

article ul li a:hover {
	text-decoration: underline;
}

article ul li a:active {
	text-decoration: underline;
	color: White;
	text-shadow: Black 0.1em 0.1em 0.2em;
}

section {
	padding-left: 32px;
	padding-right: 32px;
}

list ul {
	font-size: 22px;
}

form input {
	font-size: 24px;
	background-color: #75F0F7;
	width: 400px;
}

input.submit {
	font-size: 18px;
	text-align: center;
	color: White;
	background-color: #336E7F;
	width: 85px;
    height: 30px;
	margin-left: auto;
}

table {
	width: 25%;
	border: 2px solid #FFFFFF;
	border-collapse: collapse;
}

th, td {
	padding: 8px;
	text-align: left;
	border: 2px solid #000000;
}

th {
	font-size: 18px;
	text-shadow: #FFFFFF 0.1em 0.1em 0.5em;
	background-color: #75F0F7;
}

td {
	font-size: 16px;
	background-color: #336E7F;
	text-align:	center;
}

td.changes {
	font-size: 16px;
	text-align: left;
}

p.contact a {
	text-decoration: none;
	color: #000000;
}

p.contact a:hover{
	text-decoration: underline;
}

p.contact a:active {
	text-decoration: underline;
	color: white;
}

p.mail a {
	font-size: 22px;
	text-decoration: none;
	color: #FFFFFF;
	border: dotted 4px #000000;
	padding: 4px;
}

span.material-symbols-outlined {
font-size: 26px;
}

a.link	{
	font-size: 18px;
	color: #FFFFFF;
	letter-spacing: -2px;
}

a.link:active {
	color: #000000;
	text-decoration: underline;
}

p.name {
	font-size: 20px;
	color: #FFFFFF;
}

textarea {
	font-family: Arial, Tahoma, sans-serif;
	font-size: 24px;
	background-color: #75F0F7;
    width: 401px;
    height: 180px;	
}

footer p {
	margin-bottom: 0px;
}

footer p.contact {
	float: right;
	margin-top: 12px;
	font-size: 11px;
	letter-spacing: -1px;
	word-spacing: -4px;
}

footer p.copyright {
	float: left;
	margin-top: 12px;
	font-size: 11px;
	letter-spacing: -1px;
	word-spacing: -4px;
}
